<h1>Pirate</h1>

<div class="pirate">
  <h3>Name: <%= @student.name %></h3><br>
  <h4>Weight: <%= @student.weight %></h4>
  <h5>Height: <%= @student.height %></h5>
</div><br>

<h2>Ship</h2>

<% @ships.each do |ship| %>
 <div class="ship">
   <p>Name: <%= ship.name %></p><br>
   <p>Type: <%= ship.type %></p><br>
   <p>Booty: <%= ship.booty %></p><br>
 </div><br>
<% end %>
